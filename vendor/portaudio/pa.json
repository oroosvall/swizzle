{
    "kind": "StaticLib",
    "language": "c",
    "sources":[
        {
            "files": "portaudio/include/*.h",
            "vpath": "include/*"
        },
        {
            "files": "portaudio/src/common/*.h",
            "vpath": "src/common/*"
        },
        {
            "files": "portaudio/src/common/*.c",
            "vpath": "src/common/*"
        },
        {
            "files": "portaudio/src/os/win/*.h",
            "vpath": "src/os/*",
            "filter": "system:windows"
        },
        {
            "files": "portaudio/src/os/win/*.c",
            "vpath": "src/os/*",
            "filter": "system:windows"
        },
        {
            "files": "portaudio/src/hostapi/wasapi/*.c",
            "vpath": "src/hostapi/*",
            "filter": "system:windows"
        },
        {
            "files": "portaudio/src/unix/*.h",
            "vpath": "src/os/*",
            "filter": "system:linux"
        },
        {
            "files": "portaudio/src/unix/*.c",
            "vpath": "src/os/*",
            "filter": "system:linux"
        }
    ],
    "pub_inc_dirs":[
        "portaudio/include"
    ],
    "inc_dirs":[
        "portaudio/include",
        "portaudio/src/common/",
        "portaudio/src/os/win/"
    ],
    "build_flags": {
        "removeflags": "FatalCompileWarnings"
    }
}
